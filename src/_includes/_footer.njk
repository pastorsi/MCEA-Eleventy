<footer class="footer">
  <div class="content">
    <div class="columns">
      <div class="column">
        <div class="foot-links ml-5">
          <h6 class="is-size-6">Additional links:</h6>
              {% for link in footerLinks %}
                <a href="{{ link.url }}" class="pr-5">
                  <span class="has-text-white">{{ link.text }}</span>
                </a>
              {% endfor %}
        </div>
      </div>
      <div class="column has-text-centered has-text-dark is-two-thirds">
        <p>Developed and built by Simon Measures ({% year %})</p>
      </div>
    </div>
  </div>
</footer>