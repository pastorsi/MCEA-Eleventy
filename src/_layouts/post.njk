---
layout: "base.njk"
---

<section class="section">
    <div class="content">
        <div class="columns">
            <div class="column"></div>
            <div class="column is-two-thirds">
                <h1 class="title has-text-info">{{ title }}</h1>
                <figure class="image">
                    <img src="{{ image }}" alt="{{ imageAlt }}" style="height:{{ imageHeight }}; width:{{ imageWidth }}">
                </figure>
                {{ content | safe }}
            </div>
            <div class="column"></div>
        </div>
    </div>
</section>
