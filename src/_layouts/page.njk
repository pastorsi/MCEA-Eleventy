---
layout: "base"
---

<section class="section">
    <div class="content">
        <div class="columns">
            <div class="column"></div>
            <div class="column is-two-thirds">
                <h1 class="title has-text-info">{{ title }}</h1>
                {{ content | safe }}
                {% if title == "Churches" %}
                {% include "partials/church-grid.njk" %}
                {% endif %}
                {% if title == "Ministries" %}
                {% include "partials/ministry-grid.njk" %}
                {% endif %}
                {% if title == "News" %}
                {% include "partials/news-grid.njk" %}
                {% endif %}
                {% if title == "Events" %}
                {% include "partials/events-grid.njk" %}
                {% endif %}
                {% if title == "Contact" %}
                {% include "partials/contactForm.njk" %}
                {% endif %}
                {% if title == "Search" %}
                {% include "partials/search.njk" %}
                {% endif %}
            </div>
            <div class="column"></div>
        </div>
    </div>
</section>

<style>
@keyframes wobble {
  0% { transform: rotate(0deg); }
  25% { transform: rotate(-5deg); }
  50% { transform: rotate(0deg); }
  75% { transform: rotate(5deg); }
  100% { transform: rotate(0deg); }
}

.card:hover {
 animation: wobble 0.5s ease-in-out infinite;
}
</style>